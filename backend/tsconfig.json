{
  "include": ["src/**/*", "bin/**/*", "package.json"],
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "target": "es2015",
    "module": "commonjs",
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noImplicitAny": false
  }
}
